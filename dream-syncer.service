[Unit]
Description=dream-syncer
After=network.target

[Service]
User=pi
Type=forking
WorkingDirectory=/home/pi/repo/dream.git/sobun
Environment=GOOGLE_APPLICATION_CREDENTIALS=/home/pi/secrets/google-credentials.secret.json
ExecStart=/bin/bash -c './venv/bin/celery worker -D -A dream.syncer'
Restart=always
StandardInput=null
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=%n
KillMode=mixed
TimeoutStopSec=5

[Install]
WantedBy=default.target
